<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Heroku Ruby Inspector</title>
    <style type="text/css">
      * {
        font-family: Inconsolata, Monaco, monospace;
        font-size: 32px;
        padding: 0;
        margin: 0;
      }
      body {
        padding: 32px;
        background-color: black;
        color: white;
      }
      h2 {
        font-weight: bold;
        font-size: 100%;
      }
      .command {
        width: 800px;
        margin-bottom: 32px;
      }
      pre {
        margin-left: 1em;
        color: #aaa;
      }
      .credits {
        border-top: 1px dotted #444;
        padding-top: 8px;
        margin-top: 100px;
        color: #444;
      }
      .credits a {
        color: #444;
      }
    </style>
  </head>
  <body>

  <% @commands.each_pair do |command, output| %>
    <div class="command">
      <h2>$ <%= command %></h2>
      <pre><%= output %></pre>
    </div>
  <% end %>

    <div class="command">
      <h2>$ cat Gemfile</h2>
      <pre><%= @gemfile %></pre>
    </div>

    <div class="credits">
      Created by
      <a href="https://twitter.com/pda">@pda</a>.
    </div>
  </body>
</html>
